<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".individualRequest.RequestFormActivity">

    <EditText
        android:id="@+id/editTextSnn"
        android:layout_width="220dp"
        android:layout_height="20dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="90dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="210dp"
        android:text="@string/request_form_motive"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/editTextEndDate"
        android:layout_width="220dp"
        android:layout_height="20dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="130dp"
        android:ems="10"
        android:inputType="date"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="130dp"
        android:text="@string/request_form_end_date"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textStyle="italic" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="@string/request_title_message_body"
            android:textAlignment="center"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>

    <EditText
        android:id="@+id/editTextStartDate"
        android:layout_width="220dp"
        android:layout_height="20dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="170dp"
        android:ems="10"
        android:inputType="date"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="90dp"
        android:text="@string/request_form_to"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textStyle="italic" />


    <TextView
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="170dp"
        android:text="@string/request_form_start_date"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textStyle="italic" />


    <EditText
        android:id="@+id/editTextMotive"
        android:layout_width="320dp"
        android:layout_height="190dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="240dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textColor="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/imageViewSend"
        android:layout_width="57dp"
        android:layout_height="61dp"
        android:layout_marginTop="500dp"
        android:layout_marginStart="300dp"
        android:src="@drawable/ic_send"
        android:contentDescription="TODO" />

</RelativeLayout>